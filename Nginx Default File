server {

        listen [::]:443 ssl ipv6only=on;                     
        listen 443 ssl;
        ssl_certificate /etc/letsencrypt/live/zasymphonia.ddns.net/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/zasymphonia.ddns.net/privkey.pem; # managed by Certbot                     
        include /etc/letsencrypt/options-ssl-nginx.conf;                     
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;     

        root /home/ubuntu/Symphonia-FE/dist;

        index index.html index.htm index.nginx-debian.html;

        server_name thesymphonia.ddns.net;

        location / {
                 try_files $uri $uri /index.html?/$request_uri;
        }
        
        location ^~ /jenkins/ {
                 proxy_pass http://127.0.0.1:8080/jenkins/;
                 # Rewrite HTTPS requests from WAN to HTTP requests on LAN
                 proxy_redirect http:// https://;
 
                 # The following settings from https://wiki.jenkins-ci.org/display/JENKINS/Running+Hudson+behind+Nginx
                 sendfile off;
 
                 proxy_set_header   Host             $host:$server_port;
                 proxy_set_header   X-Real-IP        $remote_addr;
                 proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
                 proxy_max_temp_file_size 0;
 
                 # This is the maximum upload size
                 client_max_body_size       10m;
                 client_body_buffer_size    128k;
 
                 proxy_connect_timeout      900;
                 proxy_send_timeout         900;
                 proxy_read_timeout         900;
                 send_timeout               900;
                 proxy_temp_file_write_size 64k;
  
                 # Required for new HTTP-based CLI
                 proxy_http_version 1.1;
                 proxy_request_buffering off;
                 proxy_buffering off; # Required for HTTP-based CLI to work over SSL
        }
        
        location /api {
                 proxy_set_header X-Real-IP $remote_addr;
                 proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                 proxy_set_header Host $http_host;
                 proxy_set_header X-NginX-Proxy true;
                 
                 proxy_pass http://127.0.0.1:3000;
                 
                 proxy_http_version 1.1;
                 proxy_set_header Upgrade $http_upgrade;
                 proxy_set_header Connection "upgrade";
        }

}

server {
    if ($host = zasymphonia.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80 default_server;
        listen [::]:80 default_server;

        server_name thesymphonia.ddns.net;
    return 404; # managed by Certbot

}



